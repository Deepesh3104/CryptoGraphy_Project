<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/hexagon_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="0dp"/>
    <solid android:color="#FF4081"/> <!-- Set your desired background color -->
    <rotate
        android:fromDegrees="30"
        android:pivotX="50%"
        android:pivotY="50%">
